<%= form_for Article.new, :as => :article, :url => { :action => "edit" }, :html => {:method => :post, :id => :password_form, :style => @article.errors[:password].size > 0 ? "display: block" : "display: none" } do |f| %>
		<%= format_error_message(@article, :password) %>
		<br />
		<%= f.text_field :password, :class => :article_password, :placeholder => "Enter password to edit the page" %>
		<br />
		<%= f.submit 'Edit a Page', :class => :create %>	
<% end %>